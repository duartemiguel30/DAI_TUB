<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_to_white">

    <!-- Botão Back -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"/>

    <!-- Texto "Bem-vindo Administrador!" -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo Administrador!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/backButton"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"/>

    <!-- Texto "Escolha o que deseja fazer:" -->
    <TextView
        android:id="@+id/chooseOptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o que deseja fazer:"
        android:textSize="16sp"
        android:textColor="#808080"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/greetingText"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!-- Botão para gerir viagens -->
        <Button
            android:id="@+id/gerir_viagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerir Viagens"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="gerirViagens" />

        <!-- Botão para gerir tarifas -->
        <Button
            android:id="@+id/gerir_tarifas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerir Tarifas"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="gerirTarifas" />

        <!-- Botão para gerir rotas  -->
        <Button
            android:id="@+id/gerirRotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerir Rotas"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="gerirRotas" />

        <!-- Botão para visualizar informações de utentes -->
        <Button
            android:id="@+id/visualizar_utentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizar Utentes"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="visualizarUtentes" />

        <Button
            android:id="@+id/adicionar_notificacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR NOTIFICAÇÕES"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="adicionar_notificacoes" />
    </LinearLayout>

    <!-- Imagem TUB -->
    <ImageView
        android:id="@+id/tubImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logotub"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileInfoLayout"
        android:layout_marginTop="550dp"/>



</RelativeLayout>