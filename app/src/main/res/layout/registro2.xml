<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tub4">

    <!-- Botão "Back" -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onBackClicked" />

    <!-- Texto "Registo" -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/librebaskervillebold"
        android:layout_marginTop="100dp" />

    <!-- Moldura branca para o registo -->
    <LinearLayout
        android:id="@+id/registrationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/textTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Campo de Nome -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginTop="8dp" />

        <!-- Campo de Email -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginTop="8dp" />

        <!-- Campo de Password -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginTop="8dp" />

        <!-- Campo de NIF -->
        <EditText
            android:id="@+id/editTextNIF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIF"
            android:inputType="number"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginTop="8dp" />

        <!-- Campo de Número de Passe (opcional) -->
        <EditText
            android:id="@+id/editTextPassNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Passe (opcional)"
            android:inputType="number"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Botão de Login -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_below="@id/registrationLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Botão de Registrar -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registar"
        android:textColor="#FFFFFF"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
