<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/descricaoRota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Descrição da Rota" />

    <TextView
        android:id="@+id/pontoPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ponto de Partida" />

    <TextView
        android:id="@+id/pontoChegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ponto de Chegada" />

    <TextView
        android:id="@+id/horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horários" />
</LinearLayout>
